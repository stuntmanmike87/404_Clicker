{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <div class="register-wrapper">
    
        {{ form_start(registrationForm) }}
        
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            {% for flash_error in app.flashes('error') %}
            <div class="alert alert-danger alert-test">
                {{ flash_error }}
            </div>
            {% endfor %}

            <div class="form-content">
                <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
            </div>

            <div class="form-content">
            
                {{ form_row(registrationForm.username, {'label': "Nom d'utilisateur"}) }}

                {{ form_row(registrationForm.email, {'label': "Adresse e-mail"}) }}

                {{ form_row(registrationForm.plainPassword.first, {'label': "Mot de passe"}) }}

                {{ form_row(registrationForm.plainPassword.second, {'label': "Confirmer le mot de passe"}) }}

                <button type="submit" class="btn btn-lg">Inscription</button>

            </div>

        {{ form_end(registrationForm) }}

    </div>
    
{% endblock %}